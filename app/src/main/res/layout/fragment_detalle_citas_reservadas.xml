<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.uiPaciente.CitasProgramadas.DetalleCitasReservadasFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="377dp"
            android:layout_height="589dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:src="@drawable/logoparadise02" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Reprogramar Cita"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:columnCount="3"
                    android:rowCount="6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="8dp"
                        android:text="Fecha de Cita" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_margin="8dp"
                        android:text="Dia " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_margin="8dp"
                        android:text="Horario" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_margin="8dp"
                        android:text="Doctor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_margin="8dp"
                        android:text="Especialidad" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:layout_margin="8dp"
                        android:text="Estado" />


                    <TextView
                        android:id="@+id/txtFechaCita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_margin="8dp"
                        android:text="123"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtDiaCita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_margin="8dp"
                        android:text="@string/apellido"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtHorarioCita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_margin="8dp"
                        android:text="@string/Dni"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtDoctorCita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="2"
                        android:layout_margin="8dp"
                        android:text="@string/Telefono"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtEspecialidadCita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="4"
                        android:layout_column="2"
                        android:layout_margin="8dp"
                        android:text="especialida"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtEstadoCita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="5"
                        android:layout_column="2"
                        android:layout_margin="8dp"
                        android:text="estado"
                        android:textColor="@color/black" />

                </GridLayout>
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Actualiza tu dia de Cita"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtfechaConsultaReservaPacienteReprogramar"
                        android:layout_width="246dp"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:padding="@dimen/pd_TextImpus">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="213dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Fecha"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:id="@+id/btncalendarioReservaReprogramar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/btnColor"
                        android:text="@string/Calendario"
                        android:textSize="10dp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/list_HorarioReservaPacienteReprogramar"
                    android:layout_width="371dp"
                    android:layout_height="258dp"
                    android:layout_gravity="center"
                    android:nestedScrollingEnabled="true">

                </ListView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btnCancelarCitaReprogramada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/btnColor"
                        android:text="@string/Cancelar" />

                    <Button
                        android:id="@+id/btnCitaReprogramar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/btnColor"
                        android:visibility="gone"
                        android:text="Reprogramar" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_diaSelecionadoReservarReprogramar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>


